<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Logout and Add Task Buttons with Title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ScheduleMaster"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/AddTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Task" />
        </LinearLayout>

        <!-- Calendar Title that links to the full calendar -->
        <TextView
            android:id="@+id/calendarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="This Week's Schedule"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Horizontal layout for weekly calendar buttons -->
        <LinearLayout
            android:id="@+id/weeklyCalendarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- TextView to display tasks for selected day -->
        <TextView
            android:id="@+id/selectedDayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Tasks for Selected Day"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>